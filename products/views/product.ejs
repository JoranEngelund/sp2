<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="container-fluid bg-dark text-white text-center">
    <nav class="navbar navbar-expand-lg navbar-dark shadowme">
      <div class="container-fluid bg-dark d-flex justify-content-center">
        <div>
          <img
            src="http://images.restapi.co.za/pvt/Noroff-64.png"
            alt=""
            class="navbar-brand"
            id="spritespin"
          />
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
    <div class="container-fluid bg-dark text-white">
      <h2 class="my-4">Product Table</h2>
      <div>
        <ul class="nav d-flex justify-content-center fs-5">
          <li class="nav-item">
            <a class="nav-link text-white" href="/product/test"
              >Back to Products</a
            >
          </li>
        </ul>
      </div>
      <div class="container my-4">
        <% product.forEach(function(product){ %>
        <div class="table-responsive my-3">
          <table class="table table-dark table-striped table-hover">
            <tbody>
              <tr>
                <th scope="row">Product ID</th>
                <td><%= product["Product ID"] %></td>
              </tr>
              <tr>
                <th scope="row">Product Name</th>
                <td><%= product["Product Name"] %></td>
              </tr>
              <tr>
                <th scope="row">Product Number</th>
                <td><%= product["ProductNumber"] %></td>
              </tr>
              <tr>
                <th scope="row">Color</th>
                <td><%= product["Color"] %></td>
              </tr>
              <tr>
                <th scope="row">Size</th>
                <td><%= product["Size"] %></td>
              </tr>
              <tr>
                <th scope="row">Weight</th>
                <td><%= product["Weight"] %></td>
              </tr>
              <tr>
                <th scope="row">List Price</th>
                <td><%= product["List price"] %></td>
              </tr>
              <tr>
                <th scope="row">Sell Start Date</th>
                <td><%= product["sell start date"] %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
