<!DOCTYPE html>
<html>
  <head>
    <title>Customer Service</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="text-light bg-dark text-white">
    <div class="container bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark shadowme">
        <div class="container-fluid">
          <!-- <a class="navbar-brand" href="#"></a> -->
          <div>
            <img
              src="http://images.restapi.co.za/pvt/Noroff-64.png"
              alt=""
              class="navbar-brand"
              id="spritespin"
            />
          </div>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
      </nav>
      <h1 class="text-center">Welcome to Customer Service</h1>
      <div class="d-flex justify-content-center">
        <form id="searchForm" class="form-inline my-2 my-lg-0">
          <input
            id="prefixInput"
            name="prefix"
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search on last name"
            aria-label="Search"
          />
          <div class="d-flex mt-2 justify-content-center">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
              Search
            </button>
          </div>
        </form>
      </div>
      <div class="card-text">
        <% if (customers.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-dark table-striped table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Phone</th>
              </tr>
            </thead>
            <tbody>
              <% customers.forEach(function(c){ %>
              <tr>
                <td><%= c.Title %></td>
                <td><%= c.FirstName %></td>
                <td><%= c.LastName %></td>
                <td><%= c.EmailAddress %></td>
                <td><%= c.Phone %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <p class="text-center">
          No customers found for prefix “<%= prefix %>.”
        </p>
        <% } %>
      </div>
    </div>
  </body>
</html>

<script>
  document
    .getElementById("searchForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();
      const prefix = document.getElementById("prefixInput").value.trim();
      if (!prefix) return;
      window.location.href = `/customer/${encodeURIComponent(prefix)}`;
    });
</script>
